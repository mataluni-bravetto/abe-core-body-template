{
  "manifest_version": 3,
  "name": "AiGuardians",
  "version": "1.0.0",
  "description": "Finally, AI tools for engineers who don't believe the hype. Transparent failure logging, confidence scores, and uncertainty flagging for skeptical developers.",
  "author": "AiGuardians",
  "homepage_url": "https://aiguardian.ai",
  "permissions": [
    "storage",
    "alarms",
    "contextMenus",
    "clipboardWrite"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/content.js"
      ]
    }
  ],
  "action": {
    "default_title": "AiGuardians - Finally, AI tools for engineers who don't believe the hype",
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "assets/icons/icon-16.png",
      "19": "assets/icons/icon-19.png",
      "32": "assets/icons/icon-32.png",
      "38": "assets/icons/icon-38.png",
      "48": "assets/icons/icon-48.png",
      "128": "assets/icons/icon-128.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon-16.png",
    "19": "assets/icons/icon-19.png",
    "32": "assets/icons/icon-32.png",
    "38": "assets/icons/icon-38.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  },
  "options_ui": {
    "page": "src/options.html",
    "open_in_tab": false
  },
  "commands": {
    "analyze-selection": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A"
      },
      "description": "Analyze selected text"
    },
    "clear-highlights": {
      "suggested_key": {
        "default": "Ctrl+Shift+C",
        "mac": "Command+Shift+C"
      },
      "description": "Clear all highlights"
    },
    "show-history": {
      "suggested_key": {
        "default": "Ctrl+Shift+H",
        "mac": "Command+Shift+H"
      },
      "description": "Show analysis history"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": []
}